[colors]
background = #222
foreground = #ccc
foreground-alt = #222
primary = #fff
secondary = #222
alert = #222
green = #0f0

[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 27
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
cursor-click = pointer
cursor-scroll = ns-resize

padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2

; important when using xwindow on the left
fixed-center = true 

; Bitstream is also the font in my terminal
;
; with the ";3" we vertically align the text
; (the syntax is "font-N = <fontconfig pattern>;<vertical offset>")
font-0 = "Bitstream Vera Sans Mono:size=10;3"
font-1 = "FontAwesome:size=10;2"

modules-left = i3 xwindow
modules-center = date
modules-right = battery0 battery1 pulseaudio

tray-position = right
tray-padding = 2
tray-detached = false

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 100

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
padding = 1
; only show workspaces from the respective monitor
pin-workspaces = true

label-mode-padding = ${self.padding}
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background}
label-focused-underline= ${colors.primary}
label-focused-padding = ${self.padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = ${self.padding}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.padding}

[module/date]
type = internal/date
interval = 5
date = "%a %d %b %Y"
time = %H:%M
label = %date%, %time%

[module/pulseaudio]
type = internal/pulseaudio

; NOTE: use gucharmap to obtain the icons
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

format-volume = <ramp-volume> <label-volume>
format-muted =  0%

[module/battery0]
type = internal/battery
; BAT0 and BAT1 are randomly assigned, i.e. their IDs sometimes just swap
battery = BAT0
adapter = ADP0

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
label-charging = %percentage%%
label-discharging = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

full-at = 95
label-full = 
label-full-foreground = ${colors.green}

[module/battery1]
type = internal/battery
; BAT0 and BAT1 are randomly assigned, i.e. their IDs sometimes just swap
battery = BAT0
adapter = ADP0

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
label-charging = %percentage%%
label-discharging = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

full-at = 95
label-full = 
label-full-foreground = ${colors.green}

